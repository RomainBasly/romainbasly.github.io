---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource/cairo/400.css";
import "@fontsource/cairo/600.css";
import "@fontsource/cairo/800.css";
import "@fontsource/mukta/200.css";
import "@fontsource/mukta/400.css";
import "@fontsource/mukta/600.css";
import "@fontsource/mukta/800.css";
import "@fontsource-variable/eb-garamond";
import "@fontsource-variable/dosis";
import NavBarContainer from "../components/elements/NavBarContainer";
import SocialNetworks from "../components/materials/socialNetworks";
import EmailComponent from "../components/materials/emailComponent";
import { getImage } from "astro:assets";
import ImageLogo from "../Assets/Images/Logo-blanc.png";
const optimizedImage = await getImage({
  src: ImageLogo,
  width: 800,
  height: 600,
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="RB's blog" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <NavBarContainer client:load imageUrl={optimizedImage.src} />
    <SocialNetworks />
    <EmailComponent />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    font-family: "Mukta", sans-serif;
    font-weight: 200;
  }
  html {
    background-color: #0a1128;
    color: white;
    scroll-behavior: smooth;
  }

  body {
    margin: 16px;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
    width: 100%;
  }
  h1,
  h2 {
    color: #ff5c39;
    font-family: "Cairo", sans-serif;
    line-height: 1;
    margin: 0;

    @media screen and (max-width: 650px) {
      line-height: 1.2;
    }
  }

  h2 {
    padding-top: 10px;
  }

  h3 {
    font-size: 20px;
    margin-block-start: 0;
    margin-block-end: 0;
  }

  p,
  li {
    font-size: 20px;
    margin: 0;

    @media screen and (max-width: 900px) {
      font-size: 20px;
    }
    @media screen and (max-width: 650px) {
      font-size: 18px;
    }
  }

  strong {
    font-weight: bold;
    color: #ced4da;
  }

  p code {
    padding: 8px;
    width: 100%;
    background-color: black;
  }

  pre {
    background-color: #e5e5e5;
  }

  pre code {
    padding: 8px;
  }

  pre code .line {
    padding: 8px;
    border: none;
  }

  table {
    border: 1px solid white;
    border-collapse: collapse;
  }

  table td,
  table th {
    border: 1px solid white;
    padding: 2px 6px;
    font-size: 18px;

    @media screen and (max-width: 650px) {
      font-size: 16px;
    }
  }

  ul {
    margin-block-start: 0;
    margin-block-end: 0;
  }

  .img {
    padding-top: 20px;
    max-width: 100%;
  }

  a {
    color: white;
  }

  blockquote {
    font-style: italic;
    background-color: #22223b;
    padding: 8px;

    @media screen and (max-width: 650px) {
      margin-inline-start: 10px;
      margin-inline-end: 10px;
    }
  }

  blockquote p {
    font-size: 20px;
    @media screen and (max-width: 650px) {
      font-size: 18px;
    }
  }

  .blog-image-container {
    display: flex;
    flex-direction: column;
  }
</style>
